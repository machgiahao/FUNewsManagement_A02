@page
@model FUNewsManagementRazorPages.Pages.NewsArticles.DetailsModel

@{
    ViewData["Title"] = "News Article Details";
}

<link rel="stylesheet" href="~/css/account.css" />

<style>
    .news-article-wrapper {
        max-width: 750px;
        margin: 40px auto;
        background: #fff;
        border-radius: 1.2rem;
        box-shadow: 0 2px 16px rgba(54, 209, 220, 0.10);
        padding: 2.5rem 2rem 2rem 2rem;
    }

    .news-article-image {
        width: 100%;
        max-height: 320px;
        object-fit: cover;
        border-radius: 1.2rem 1.2rem 0 0;
        margin-bottom: 2rem;
        display: block;
    }

    .news-article-title {
        font-size: 2.1rem;
        font-weight: bold;
        color: #222;
        margin-bottom: 0.5rem;
        line-height: 1.2;
    }

    .news-article-headline {
        font-size: 1.15rem;
        color: #36d1dc;
        font-weight: 500;
        margin-bottom: 1.2rem;
        line-height: 1.3;
    }

    .news-article-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 1.2rem;
        font-size: 1rem;
        color: #555;
        margin-bottom: 1.5rem;
        align-items: center;
    }

        .news-article-meta .badge {
            font-size: 1em;
            border-radius: 999px;
            padding: 0.3em 1em;
            margin-right: 0.5em;
        }

    .news-article-content {
        font-size: 1.15rem;
        color: #222;
        line-height: 1.7;
        white-space: pre-line;
        margin-bottom: 2rem;
    }

    .news-article-actions {
        display: flex;
        gap: 1rem;
        justify-content: flex-end;
        margin-top: 2rem;
    }
</style>

<div class="news-article-wrapper">
    @if (!string.IsNullOrEmpty(Model.NewsArticle.ImageUrl))
    {
        <img src="@Model.NewsArticle.ImageUrl" alt="News Image" class="news-article-image" />
    }
    <div class="news-article-title">
        @Model.NewsArticle.NewsTitle
    </div>
    <div class="news-article-headline">
        @Model.NewsArticle.Headline
    </div>
    <div class="news-article-meta">
        <span>
            <i class="bi bi-person"></i> <strong>@Model.NewsArticle.CreatedBy</strong>
        </span>
        <span>
            <i class="bi bi-calendar"></i> @Model.NewsArticle.CreatedDate?.ToString("MMM dd, yyyy HH:mm")
        </span>
        <span class="badge bg-info text-dark">
            @Model.NewsArticle.CategoryName
        </span>
        <span class="badge @(Model.NewsArticle.NewsStatus == true ? "bg-success" : "bg-danger")">
            @(Model.NewsArticle.NewsStatus == true ? "Active" : "Inactive")
        </span>
    </div>
    @if (!string.IsNullOrEmpty(Model.NewsArticle.NewsSource))
    {
        <div style="margin: 0.5rem 0 1.5rem 0; color: #36d1dc; font-size: 1rem;">
            Source: <span style="color: #555;">@Model.NewsArticle.NewsSource</span>
        </div>
    }

    <div class="news-article-content">
        @Model.NewsArticle.NewsContent
    </div>
    <div class="news-article-actions">
        <a href="#" onclick="if(document.referrer){window.history.back();}else{window.location='@Url.Action("Index")';} return false;" class="back-link">← Back</a>
    </div>
</div>
