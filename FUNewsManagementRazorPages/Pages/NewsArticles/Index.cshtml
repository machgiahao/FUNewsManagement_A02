@page
@using FUNewsManagementSystem.BusinessObject.Enums
@using NewsManagementMVC.Models.ViewModels.NewsArticle
@model FUNewsManagementRazorPages.Pages.NewsArticles.IndexModel

@{
    ViewData["Title"] = "Index";
    ViewData["CreateFormPartial"] = "NewsArticles/_CreateForm";
    ViewData["EditFormPartial"] = "NewsArticles/_EditForm";
    var isStaff = (int?)ViewData["Role"] == (int)AccountRole.Staff;
}

<div class="news-bg py-5">
    <div class="container">
        <h1 class="news-heading mb-4">
            <i class="bi bi-newspaper me-2"></i> News Articles
        </h1>

        <div class="d-flex justify-content-center mb-4">
            @if (isStaff)
            {
                <a href="#" data-bs-toggle="modal" data-bs-target="#createModal" class="btn btn-primary ms-2 create-btn">
                    <i class="bi bi-plus-circle me-1"></i> Create New
                </a>
                @await Html.PartialAsync("_CreateModal", new CreateNewsArticleViewModel())
            }
        </div>
        
        @if (Model.NewsArticle != null && Model.NewsArticle.Any())
        {
            <div class="row g-5 justify-content-center">
                @foreach (var item in Model.NewsArticle)
                {
                    <div class="col-12 col-md-6 col-lg-4 d-flex">
                        <div class="card flex-fill shadow news-card border-0 rounded-4 p-0"
                             style="transition: box-shadow 0.2s; cursor: pointer;"
                             onclick="location.href='@Url.Page("./Details", new { id = item.NewsArticleId })'">
                            <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/NewsArticle/default_image.jpg" : item.ImageUrl)"
                                 alt="News Image"
                                 class="news-card-img-top" />
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title news-title mb-2">@item.NewsTitle</h5>
                                <div class="news-meta mb-2">
                                    <span class="news-date">
                                        <i class="bi bi-calendar"></i> @item.CreatedDate?.ToString("MMM dd, yyyy HH:mm")
                                    </span>
                                    <span class="badge status-badge @(item.NewsStatus == true ? "active" : "inactive")">
                                        @(item.NewsStatus == true ? "Active" : "Inactive")
                                    </span>
                                    <span class="badge category-badge">@item.CategoryName</span>
                                </div>
                                <div class="news-headline mb-2">@item.Headline</div>
                                <div class="news-content mb-3">@item.NewsContent</div>
                                <div class="news-footer d-flex align-items-center justify-content-between mt-auto">
                                    <span class="news-author">
                                        <i class="bi bi-person"></i> @item.CreatedBy
                                    </span>
                                    <div>
                                        @if (isStaff)
                                        {
                                            <a asp-page-handler="Edit" asp-route-id="@item.NewsArticleId" class="icon-btn edit-btn me-2" title="Edit" onclick="event.stopPropagation();">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button"
                                                    class="icon-btn delete-btn"
                                                    title="Delete"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#deleteModal-@item.NewsArticleId"
                                                    onclick="event.stopPropagation();">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="news-card-underline"></div>
                        </div>
                    </div>
                }

            </div>
        }
        else
        {
            <div class="text-center text-muted">No news articles found.</div>
        }
    </div>
</div>

<!-- Replace the direct partial with the shared _EditModal -->
@await Html.PartialAsync("_EditModal", Model.EditNewsArticle)

@if (Model.NewsArticle != null)
{
    foreach (var item in Model.NewsArticle)
    {
        @await Html.PartialAsync("_DeleteModal", item.NewsArticleId, new ViewDataDictionary(ViewData)
        {
            { "Name", item.NewsTitle }
        })
    }
}

<style>
    .create-btn {
        background: linear-gradient(90deg, #36d1dc 0%, #5b86e5 100%);
        color: #fff !important;
        font-weight: 600;
        border: none;
        border-radius: 30px;
        padding: 0.7rem 2.2rem;
        font-size: 1.15rem;
        box-shadow: 0 4px 16px rgba(54, 209, 220, 0.10);
        transition: background 0.2s, box-shadow 0.2s, transform 0.15s;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .create-btn:hover, .create-btn:focus {
        background: linear-gradient(90deg, #5b86e5 0%, #36d1dc 100%);
        color: #fff !important;
        box-shadow: 0 6px 24px rgba(54, 209, 220, 0.18);
        transform: translateY(-2px) scale(1.03);
        text-decoration: none;
    }

    .news-heading {
        font-size: 3rem;
        font-weight: 800;
        text-align: center;
        background: linear-gradient(90deg, #36d1dc 0%, #5b86e5 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-fill-color: transparent;
        letter-spacing: 1.5px;
        margin-bottom: 1.5rem;
        position: relative;
        text-shadow: 0 2px 8px rgba(54, 209, 220, 0.10);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .news-heading::after {
        content: "";
        display: block;
        width: 120px;
        height: 5px;
        margin: 0.5rem auto 0 auto;
        background: linear-gradient(90deg, #36d1dc 0%, #5b86e5 100%);
        border-radius: 3px;
        opacity: 0.7;
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        bottom: -12px;
    }

    .news-card-img-top {
        width: 100%;
        height: 180px;
        object-fit: cover;
        border-radius: 12px 12px 0 0;
        display: block;
        background: #fff;
    }

    .bg-dark {
        background-color: #181a20 !important;
    }

    .text-white {
        color: #fff !important;
    }

    .news-card-underline {
        position: absolute;
        left: 0;
        right: 0;
        bottom: 0;
        height: 6px;
        width: 100%;
        background: linear-gradient(90deg, #36d1dc 0%, #5b86e5 100%);
        border-radius: 0 0 12px 12px;
        opacity: 0.7;
        z-index: 2;
        margin: 0;
        content: "";
        display: block;
        pointer-events: none;
    }

    .news-bg {
        background: #f8fafc;
        min-height: 100vh;
    }

    .news-card {
        position: relative;
        box-shadow: 0 0.5rem 2rem rgba(0,0,0,.10) !important;
        border-color: #0dcaf0;
        overflow: hidden; /* Ensure underline doesn't overflow rounded corners */
    }

    .news-card:hover {
        box-shadow: 0 1rem 2.5rem rgba(0,0,0,.18) !important;
        border-color: #0dcaf0;
        transform: translateY(-4px) scale(1.01);
    }

    .card-title {
        min-height: 3rem;
    }

    .card-text.text-truncate {
        max-height: 3.5rem;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .news-title {
        background: linear-gradient(90deg, #2ed9e9 0%, #36c3ea 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-fill-color: transparent;
        font-weight: bold;
    }

    .headline {
        font-weight: bold;
    }

    .icon-btn {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: none;
        background: #e9ecef;
        color: #333;
        font-size: 1.2rem;
        transition: background 0.2s, color 0.2s, box-shadow 0.2s;
        box-shadow: 0 1px 4px rgba(54, 209, 220, 0.08);
        margin-right: 4px;
        cursor: pointer;
    }

    .icon-btn:last-child {
        margin-right: 0;
    }

    .icon-btn.edit-btn {
        background: linear-gradient(90deg, #36d1dc 0%, #5b86e5 100%);
        color: #fff;
    }

    .icon-btn.edit-btn:hover {
        background: linear-gradient(90deg, #5b86e5 0%, #36d1dc 100%);
        color: #fff;
    }

    .icon-btn.delete-btn {
        background: #ff4d4f;
        color: #fff;
    }

    .icon-btn.delete-btn:hover {
        background: #d9363e;
        color: #fff;
    }

    .news-title {
        font-size: 1.25rem;
        font-weight: 700;
        background: linear-gradient(90deg, #36d1dc 0%, #5b86e5 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-fill-color: transparent;
        margin-bottom: 0.25rem;
    }

    .news-meta {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.95rem;
        margin-bottom: 0.5rem;
    }

    .news-date {
        color: #888;
        font-size: 0.95rem;
    }

    .status-badge {
        font-size: 0.9rem;
        font-weight: 600;
        border-radius: 999px;
        padding: 0.2em 0.9em;
        background: #e0f7fa;
        color: #0097a7;
    }

        .status-badge.active {
            background: #e0f7fa;
            color: #0097a7;
        }

        .status-badge.inactive {
            background: #ffeaea;
            color: #d32f2f;
        }

    .category-badge {
        background: #e3f2fd;
        color: #1976d2;
        font-size: 0.9rem;
        border-radius: 999px;
        padding: 0.2em 0.9em;
        font-weight: 600;
    }

    .news-headline {
        font-size: 1rem;
        color: #36b3e9;
        font-style: italic;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .news-content {
        font-size: 0.98rem;
        color: #444;
        max-height: 3.5em;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: pre-line;
    }

    .news-footer {
        border-top: 1px solid #f0f0f0;
        padding-top: 0.5rem;
        margin-top: 0.5rem;
        font-size: 0.95rem;
    }

    .news-author {
        color: #888;
        font-size: 0.95rem;
        display: flex;
        align-items: center;
        gap: 0.3em;
    }

</style>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @if (ViewData["ShowEditModal"] as bool? == true)
    {
        <script>
            var editModal = new bootstrap.Modal(document.getElementById('editModal'));
            editModal.show();
        </script>
    }
}
