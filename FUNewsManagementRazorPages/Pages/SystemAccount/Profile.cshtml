@page
@model FUNewsManagementRazorPages.Pages.SystemAccount.ProfileModel
@using FUNewsManagementSystem.BusinessObject.Enums
@{
    var roleName = Enum.GetName(typeof(AccountRole), Model.SystemAccount.AccountRole);
    var initials = string.Join("", Model.SystemAccount.AccountName?.Split(' ', StringSplitOptions.RemoveEmptyEntries).Select(s => s[0])).ToUpper();
}

<div class="profile-bg">
    <div class="profile-container">
        <div class="profile-glass-card">
            <div class="profile-avatar-lg">
                <span>@initials</span>
            </div>
            <div class="profile-info">
                <div class="profile-row">
                    <span class="profile-icon"><i class="bi bi-person-fill"></i></span>
                    <span class="profile-label">Name</span>
                    <span class="profile-value">@Model.SystemAccount.AccountName</span>
                </div>
                <div class="profile-row">
                    <span class="profile-icon"><i class="bi bi-envelope-fill"></i></span>
                    <span class="profile-label">Email</span>
                    <span class="profile-value">@Model.SystemAccount.AccountEmail</span>
                </div>
                <div class="profile-row">
                    <span class="profile-icon"><i class="bi bi-award-fill"></i></span>
                    <span class="profile-label">Role</span>
                    <span class="profile-value">@roleName</span>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    .profile-bg {
        min-height: 100vh;
        /* background: linear-gradient(120deg, #e0eafc 0%, #cfdef3 100%); */
        display: flex;
        align-items: start;
        justify-content: center;
    }

    .profile-container {
        width: 100%;
        max-width: 420px;
        margin: 3rem auto;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .profile-glass-card {
        width: 100%;
        background: rgba(255,255,255,0.7);
        border-radius: 32px;
        box-shadow: 0 8px 32px 0 rgba(54, 209, 220, 0.18);
        backdrop-filter: blur(8px);
        padding: 2.5rem 2rem 2rem 2rem;
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .profile-avatar-lg {
        width: 110px;
        height: 110px;
        background: linear-gradient(135deg, #36d1dc 0%, #5b86e5 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        font-weight: 700;
        color: #fff;
        margin-top: -80px;
        margin-bottom: 1.5rem;
        box-shadow: 0 4px 24px rgba(54, 209, 220, 0.18);
        border: 6px solid #fff;
    }

    .profile-info {
        width: 100%;
    }

    .profile-row {
        display: flex;
        align-items: center;
        margin-bottom: 1.2rem;
        gap: 0.75rem;
    }

    .profile-icon {
        color: #36b3e9;
        font-size: 1.3rem;
        width: 2rem;
        display: flex;
        justify-content: center;
    }

    .profile-label {
        font-weight: 700;
        color: #36b3e9;
        min-width: 60px;
        width: 70px;
    }

    .profile-value {
        font-weight: 500;
        color: #444;
        flex: 1;
        word-break: break-all;
    }

    .profile-actions {
        margin-top: 2rem;
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .profile-btn {
        padding: 0.6rem 1.5rem;
        border-radius: 24px;
        border: none;
        background: linear-gradient(90deg, #36d1dc 0%, #5b86e5 100%);
        color: #fff;
        font-weight: 600;
        font-size: 1rem;
        box-shadow: 0 2px 8px rgba(54, 209, 220, 0.10);
        transition: background 0.2s, box-shadow 0.2s;
        cursor: pointer;
    }

        .profile-btn:hover {
            background: linear-gradient(90deg, #5b86e5 0%, #36d1dc 100%);
            box-shadow: 0 4px 16px rgba(54, 209, 220, 0.18);
        }

    .profile-btn-secondary {
        background: #fff;
        color: #36b3e9;
        border: 2px solid #36b3e9;
    }

        .profile-btn-secondary:hover {
            background: #e0eafc;
        }
</style>
