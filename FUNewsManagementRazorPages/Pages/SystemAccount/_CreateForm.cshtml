@model CreateAccountViewModel

<form method="post" asp-page-handler="CreateAccount">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="mb-3">
        <input asp-for="AccountName" class="form-control" placeholder="Enter Account Name" />
        <span asp-validation-for="AccountName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <input asp-for="AccountEmail" class="form-control" type="email" placeholder="Enter Email" />
        <span asp-validation-for="AccountEmail" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <select asp-for="AccountRole" class="form-select">
            <option value="">-- Select Role --</option>
            <option value="1">Staff</option>
            <option value="2">Lecturer</option>
        </select>
        <span asp-validation-for="AccountRole" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <input asp-for="AccountPassword" type="password" class="form-control" placeholder="Enter Password" />
        <span asp-validation-for="AccountPassword" class="text-danger"></span>
    </div>

    <div class="form-group text-end">
        <button type="button" class="btn btn-cancel me-2" data-bs-dismiss="modal">Cancel</button>
        <input type="submit" value="Save" class="btn btn-gradient" />
    </div>
</form>
